<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="castro.daniel.projectapp44.MyActivity2">

    <TextView
        android:text="@string/activity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/previousActivity"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/previousText"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destroy"
        android:id="@+id/destroy"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="40sp"
        android:id="@+id/nameText"
        android:layout_below="@+id/destroy"
        android:layout_toStartOf="@+id/destroy"
        android:layout_marginTop="44dp" />

</RelativeLayout>
